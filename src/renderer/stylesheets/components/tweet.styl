.tweet
  display flex
  margin 10px 0
  margin-bottom 16px

  .profile-image
    position relative
    width 42px
    height 42px
    img
      width 42px
      border-radius 4px
  .contents
    flex 1
    margin-left 10px

  .contents-header
    display flex
    .name
      font-weight bold
    .screen-name
      margin-left 4px
  .created-at
    margin-left 4px
    color #9C9C9C
  .media
    height 200px
    margin-top 12px
    img
      height 100%

  .contents-footer
    position relative
    .favorite
      cursor pointer
      color #DADADA
      &.favorited
        color #ffac33

   &.retweet
    .retweet-user
      position absolute
      right -4px
      bottom -4px
      width 20px
