.article-header
  display flex
  padding 6px
  background #FFF
  border-bottom 1px solid #EEE
  position absolute
  top 0
  right 0
  left 0
  height 38px
  h1
    font-size 16px
    margin 0
    line-height 20px
    margin-left 7px
    color #5A5A5A
    padding-top 3px
    font-weight normal
  .input
    margin-left auto
  .ui.icon.input > i.icon
    height 95%
  .refresh
    padding: 1px 6px;
    border: 1px solid #EEE;
    border-radius: 6px;
    color: #909090;
    cursor: pointer;
    margin-top: 3px;
    margin-bottom: 1px;
    margin-right: -3px;
    font-size: 12px;
